            <form action="" method="post">
                <fieldset>
                    <legend>Cadastrar-se</legend>
                    <label for="nome">Nome</label>
                    <input type="text" name="nome" id="nome" placeholder="Seu Nome">
                    <label for="idade">Idade</label>
                    <input type="number" name="idade" id="idade">
